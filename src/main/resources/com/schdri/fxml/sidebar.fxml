<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Label?>
<VBox fx:id="sideMenu" styleClass="side-menu" spacing="20" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" >
    <padding>
        <Insets top="20" right="10" bottom="20" left="10"/>
    </padding>

    <Button fx:id="basicInfoButton" styleClass="nav-button" >
        <graphic>
            <VBox alignment="CENTER">
                <Label text="基本信息" styleClass="nav-button-title"/>
                <Label text="Information" styleClass="nav-button-subtitle"/>
            </VBox>
        </graphic>
    </Button>

    <Button fx:id="calculationRulesButton" styleClass="nav-button" >
        <graphic>
            <VBox alignment="CENTER">
                <Label text="计算规则" styleClass="nav-button-title"/>
                <Label text="Rules" styleClass="nav-button-subtitle"/>
            </VBox>
        </graphic>
    </Button>

    <Button fx:id="dataInputButton" styleClass="nav-button" >
        <graphic>
            <VBox alignment="CENTER">
                <Label text="数据输入" styleClass="nav-button-title"/>
                <Label text="Data" styleClass="nav-button-subtitle"/>
            </VBox>
        </graphic>
    </Button>

    <Button fx:id="ruleDefinitionButton" styleClass="nav-button" >
        <graphic>
            <VBox alignment="CENTER">
                <Label text="规则定义" styleClass="nav-button-title"/>
                <Label text="Define" styleClass="nav-button-subtitle"/>
            </VBox>
        </graphic>
    </Button>
</VBox>